
@{
    ViewBag.Title = "Edit Slider";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}
@model shoes.Models.Slider
<div class="col-lg-12">
    <div class="white_card card_height_100 mb_30">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Edit Slider</h3>
                </div>
            </div>
        </div>
        <div class="white_card_body">
            <div class="card-body">
                @using (Html.BeginForm("EditSlider", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.S_id)
                    @Html.EditorFor(model => model.createdAt, new { htmlAttributes = new { @class = "form-control", @Hidden = "hidden", @Value = DateTime.Now } })
                    @Html.EditorFor(model => model.updatedAt, new { htmlAttributes = new { @class = "form-control", @Hidden = "hidden", @Value = DateTime.Now } })
                    @Html.EditorFor(model => model.S_id, new { htmlAttributes = new { @class = "form-control", hidden = "hidden", Value = Model.S_id } })
                    @Html.EditorFor(model => model.S_img, new { htmlAttributes = new { @class = "form-control", @Hidden = "hidden", @Value = Model.S_img } })

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="form-label" for="inputEmail4">Slider Image</label> <br />
                            <img src="~/assets/uploads/Sliders/@Model.S_img" width="220" height="150" />
                        </div>

                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="form-label" for="inputEmail4">Slider Title</label>
                            @Html.EditorFor(model => model.S_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Slider Title", required = "required" } })
                            @Html.ValidationMessageFor(model => model.S_name, "", new { @class = "text-danger" })
                        </div>

                    </div>


                    <div class="mb-3">
                        <label class="form-label" for="inputAddress">Slider Description</label>
                        @Html.EditorFor(model => model.S_desc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Slider Title", required = "required" } })
                        @Html.ValidationMessageFor(model => model.S_desc, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-text">
                            <label for="inputGroupSelect01">Status</label>
                        </div>
                        <select required class="form-select" id="inputGroupSelect01" name="status">
                            <option @(Model.S_status == null ? "Selected" : "") disabled>Choose Status...</option>
                            <option @(Model.S_status == "1" ? "Selected" : "") value="1">Publish</option>
                            <option @(Model.S_status == "2" ? "Selected" : "") value="2">Draft</option>
                        </select>
                    </div>

                    <div class="row mb-3">
                        <div class=" col-md">
                            <div class="input-group mb-3">
                                <input type="file" name="file" value="@(Model.S_img)" class="form-control" accept="image/*" id="inputGroupFile02">
                                @Html.ValidationMessageFor(model => model.S_img, "", new { @class = "text-danger" })
                                <label class="input-group-text" for="inputGroupFile02">Upload Image</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>

                </form>

                }


            </div>

        </div>
    </div>
</div>


